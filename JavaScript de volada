//Parametros por defecto
function diAlgo(x = 'patricia') { 
    //x = x || 'patricia';
    return ' algo: ' + x;
}

class Person {
    constructor(name, age) {
        this.name = name;
        this.age = age;
    }

    about() {
        console.log(`Mi nombre:

        ${this.name}mi edad: ${this.age}`)
    }
}

class Worker extends Person { 

    constructor(name, age, job) { 
        super(name, age);
        this.job = job;
    }

    about() {
            console.log(`Mi nombre:

            ${this.name}mi edad: ${this.age}, 

            mi trabajo es ${this.job}`)
        }
}
